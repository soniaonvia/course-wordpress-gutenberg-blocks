{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "onvia-blocks/curvy",
	"version": "0.1.0",
	"title": "Curvy",
	"category": "onvia-blocks",
	"icon": "smiley",
	"description": "Curvy shape dividers to make dividing page content more interesting.",
	"example": {
		"innerBlocks": [
			{
				"name": "core/paragraph",
				"attributes": {
					"content": "This is an example curvy block."
				}
			},
			{
				"name": "core/heading",
				"attributes": {
					"content": "This is an example curvy block."
				}
			}
		]
	},
	"supports": {
		"html": false,
		"color" : {
			"background": true,
			"text": true,
			"link": true
		},
		"spacing": {
			"padding": true
		}
	},
	"variations": [
		{
			"name": "top-only",
			"title": "Curvy - top only",
			"attributes": {
				"enableTopCurve": true,
				"enableBottomCurve": false
			}
		},
		{
			"name": "bottom-only",
			"title": "Curvy - bottom only",
			"attributes": {
				"enableTopCurve": false,
				"enableBottomCurve": true
			}
		}
	],
	"attributes": {
		"style" : {
			"type": "object",
			"default": {
				"color": {
					"background" : "#ec4899"
				},
				"spacing": {
					"padding": {
						"top": "80px",
						"bottom": "80px",
						"left": "50px",
						"right": "50px"
					}
				}
			}
		},
		"enableTopCurve": {
			"type": "boolean",
			"default": true
		},
		"topWidth": {
			"type": "number",
			"default": 100
		},
		"topHeight": {
			"type": "number",
			"default": 100
		},
		"topColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"topFlipX": {
			"type": "boolean",
			"default": false
		},
		"topFlipY": {
			"type": "boolean",
			"default": false
		},
		"enableBottomCurve": {
			"type": "boolean",
			"default": true
		},
		"bottomWidth": {
			"type": "number",
			"default": 100
		},
		"bottomHeight": {
			"type": "number",
			"default": 100
		},
		"bottomColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"bottomFlipX": {
			"type": "boolean",
			"default": false
		},
		"bottomFlipY": {
			"type": "boolean",
			"default": false
		}
	},
	"textdomain": "onvia-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
